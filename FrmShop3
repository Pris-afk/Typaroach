#include <vcl.h>
#pragma hdrstop

#include "FrmShop2.h"
#include "FrmShopcpp.h"
#include "FormMain.h"
#include "FrmShop3.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm2 *Form2;
TForm1 *Form1;
TFrmMain *FrmMain;
TForm3 *Form3;
//---------------------------------------------------------------------------
__fastcall TForm3::TForm3(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm3::BackKiriImgClick(TObject *Sender)
{
	if (!Form2) {
		Form2 = new TForm2(this);
	}
	Form2->Show();
}
//---------------------------------------------------------------------------
void __fastcall TForm3::XButtonImgClick(TObject *Sender)
{
	if (!FrmMain) {
		FrmMain = new TFrmMain(this);
	}
	FrmMain->Show();
	//FrmMain->SetFocus();

	if(Form1 && Form1->Visible){ //utk cek formny open / g (visible itu true/false)
		Form1->Close();
	}
	else if(Form2 && Form2->Visible){ //utk cek formny open / g (visible itu true/false)
		Form2->Close();
	}
	else if(Form3 && Form3->Visible){ //utk cek formny open / g (visible itu true/false)
		Form3->Close();
	}

}
//---------------------------------------------------------------------------
