//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "FrmShop2.h"
#include "FrmShopcpp.h"
#include "FormMain.h"
#include "FrmShop3.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm2 *Form2;
TForm1 *Form1;
TFrmMain *FrmMain;
TForm3 *Form3;
//---------------------------------------------------------------------------
__fastcall TForm2::TForm2(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm2::BackKiriImgClick(TObject *Sender)
{
	if (!Form1) {
		Form1 = new TForm1(this);
	}
	Form1->Show();
}
//---------------------------------------------------------------------------

void __fastcall TForm2::XButtonImgClick(TObject *Sender)
{
	if (!FrmMain) {
		FrmMain = new TFrmMain(this);
	}
	FrmMain->Show();
	//FrmMain->SetFocus();

	if(Form1 && Form1->Visible){ //utk cek formny open / g (visible itu true/false)
		Form1->Close();
	}
	else if(Form2 && Form2->Visible){ //utk cek formny open / g (visible itu true/false)
		Form2->Close();
	}
	else if(Form3 && Form3->Visible){ //utk cek formny open / g (visible itu true/false)
		Form3->Close();
	}

}
//---------------------------------------------------------------------------


void __fastcall TForm2::NextKananImgClick(TObject *Sender)
{
	if (!Form3) {
		Form3 = new TForm3(this);
	}
	Form3->Show();
}
//---------------------------------------------------------------------------
